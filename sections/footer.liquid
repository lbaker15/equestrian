<footer>
  <div class="footer__inner">
    <div class="footer__news">
      <h2>Join Our Newsletter</h2>
      <div class="footer__news-flex">
        <input class="input" placeholder="Join our newsletter" />
        <div class="news-btn">
          {% render "swipe-btn" %}
        </div>
      </div>
    </div>
    <div class="footer__social">
      <h2>Follow Us On</h2>
      <div class="footer__social-flex">
        {% if settings.social_instagram_link != blank %}
        <a href="{{settings.social_instagram_link}}"><img alt="Instagram logo" src="https://cdn.shopify.com/s/files/1/0629/7888/3813/files/INSTSAGRAM.png?v=1652725701" /></a>
        {% endif %}
        {% if settings.social_facebook_link != blank %}
        <a href="{{settings.social_facebook_link}}"><img alt="Facebook logo" src="https://cdn.shopify.com/s/files/1/0629/7888/3813/files/Facebook.png?v=1652725711" /></a>
        {% endif %}
      </div>
    </div>
    <div class="footer__links">
      {% assign size = linklists.footer.links.size %}
      {% for link in linklists.footer.links %}
      <div class="footer__links-item
    {% if size > 6 %} three-col {% elsif size > 3 and size < 7 %} two-col {% else %} one-col {% endif %}
    ">
        <a href="{{link.url}}">
          {% if link.title == 'My Account' %}
          <img class="footer__horse" alt="My account icon" src="https://cdn.shopify.com/s/files/1/0629/7888/3813/files/horse_head.png?v=1652731212" />
          {% endif %}
          {{link.title}}
        </a>
      </div>
      {% endfor %}
    </div>
  </div>
  <div class="footer__payment">
    <h2>Payment Options</h2>
    <ul>
    {%- for type in shop.enabled_payment_types -%}
    <li>
      {{ type | payment_type_svg_tag: class: 'icon' }}
    </li>
    {%- endfor -%}
    </ul>
  </div>
  <div class="footer__copyright">
    Â© 2022 Asur Equestrian Ltd
  </div>

</footer>


{% schema %}
{
"name": "footer",
"settings": [
{
"id": "cta-background-color",
"type": "color",
"label": "CTA Background Colour",
"default": "#000"
},
{
"id": "cta-border-color",
"type": "color",
"label": "CTA Border Colour",
"default": "#fff"
},
{
"id": "cta-text",
"type": "text",
"label": "CTA Text",
"default": ">"
},
{
"id": "cta-url",
"type": "url",
"label": "CTA Link",
"default": "/"
}
]
}
{% endschema %}